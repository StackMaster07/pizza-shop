<tr id="topping_<%= topping.id %>">
  <td><%= topping.name %></td>
  <td><%= topping.quantity %></td>
  <td><%= number_to_currency(topping.price_per_piece, unit: "$") %></td>
  <td class="text-center">
    <%= link_to "Edit", edit_topping_path(topping), data: { turbo_frame: "toppings_form" }, class: "btn btn-warning btn-sm me-2" %>
    <%= link_to "Delete", topping_path(topping), 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this topping?" }, 
          class: "btn btn-danger btn-sm" %>
  </td>
</tr>
