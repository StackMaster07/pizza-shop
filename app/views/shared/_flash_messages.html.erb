<% if flash[:alert] || flash[:notice] %>
  <div id="flash-message" class="alert alert-<%= flash[:alert] ? 'danger' : 'success' %> alert-dismissible fade show"
       data-controller="flash" role="alert">
    <%= flash[:alert] || flash[:notice] %>
    <button type="button" class="btn-close" data-action="flash#dismiss" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
