<% if user_signed_in? %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm px-4 py-3 mb-2 text-light">
    <div class="container-fluid">
      <span class="navbar-brand fw-bold">
        <i class="fas fa-pizza-slice text-warning" style="font-size:24px"></i> Pizza Shop
      </span>

      <div class="d-flex align-items-center">
        <% if current_user.owner? %>
          <%= link_to "Manage Toppings", toppings_path, class: "btn btn-outline-light me-2" %>
        <% end %>
        <%= link_to "View All Pizzas", pizzas_path, class: "btn btn-outline-light" %>
      </div>

      <div class="d-flex align-items-center ms-auto">
      
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-light me-2" %>

      <div class="d-flex align-items-center">
        <div class="position-relative d-inline-block me-2">
          <div class="rounded-circle bg-warning text-dark fw-bold d-flex align-items-center justify-content-center"
               style="width: 40px; height: 40px; font-size: 18px">
            <%= current_user.user_name[0].upcase %>
          </div>

          <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success">
            <%= current_user.owner? ? "Owner" : "Chef" %>
          </span>
        </div>
        <span class="fw-bold"><%= current_user.user_name %></span>
      </div>
    </div>
  </nav>
<% end %>
